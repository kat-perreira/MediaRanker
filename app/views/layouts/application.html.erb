<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="head_title">
      <h1>
        <%= link_to "Media Ranker", root_path %>

        <h2>Ranking the Best of Everything</h2>
        <ul>
        <nav class="head_nav">
          <li><%= link_to "Add a new work ", new_work_path %></li>
          <li><%= link_to "View all media ", works_path %></li>
          <li><%= link_to "View top media", root_path %></li>
          <li><%= link_to "view all users", users_path %></li>
        </nav>


        <section class="login-info">

       <% if @logged_in_user %>
         <p>
           Currently logged in as
           <%= @logged_in_user.username %>
           <%= link_to "Log out", logout_path, method: :post, class: "btn btn-outline-info" %>
         </p>
       <% else %>
         <%= link_to "Log in", new_session_path, class: "btn btn-outline-info" %>
       <% end %>
     </section>
   </header>
      </header>


      <section class="flash-messages">
      <% flash.each do |key, message| %>
        <p class="<%= key %>">
          <%= message %>
        </p>
      <% end %>
    </section>

    <main>
    <%= yield %>
  </main>

  <footer>
    </footer>


  </body>
</html>
